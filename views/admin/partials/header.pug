        .topbar-item.d-none.d-md-flex
          button#theme-settings-btn.topbar-button(
            aria-controls="theme-settings-offcanvas" 
            data-bs-target="#theme-settings-offcanvas" 
            data-bs-toggle="offcanvas" 
            type="button"
            )
            iconify-icon.fs-24.align-middle(icon="solar:settings-bold-duotone")
        // Activity
        .topbar-item.d-none.d-md-flex
          button#theme-settings-btn.topbar-button(
            aria-controls="theme-settings-offcanvas" 
            data-bs-target="#theme-activity-offcanvas" 
            data-bs-toggle="offcanvas" 
            type="button"
            )
            iconify-icon.fs-24.align-middle(icon="solar:clock-circle-bold-duotone")
        // User
        .dropdown.topbar-item
          a#page-header-user-dropdown.topbar-button(
            aria-expanded="false" 
            aria-haspopup="true" 
            data-bs-toggle="dropdown" 
            type="button"
            )
            span.d-flex.align-items-center
              img.rounded-circle(
                alt="avatar-3" 
                src="/admin/assets/images/users/avatar-1.jpg" 
                width="32"
                )
          .dropdown-menu.dropdown-menu-end
            // item
            h6.dropdown-header Welcome Gaston!
            a.dropdown-item(href="pages-profile.html")
              i.bx.bx-user-circle.text-muted.fs-18.align-middle.me-1
              span.align-middle Profile
            a.dropdown-item(href="apps-chat.html")
              i.bx.bx-message-dots.text-muted.fs-18.align-middle.me-1
              span.align-middle Messages
            a.dropdown-item(href="pages-pricing.html")
              i.bx.bx-wallet.text-muted.fs-18.align-middle.me-1
              span.align-middle Pricing
            a.dropdown-item(href="pages-faqs.html")
              i.bx.bx-help-circle.text-muted.fs-18.align-middle.me-1
              span.align-middle Help
            a.dropdown-item(href="auth-lock-screen.html")
              i.bx.bx-lock.text-muted.fs-18.align-middle.me-1
              span.align-middle Lock screen
            .dropdown-divider.my-1
            a.dropdown-item.text-danger(href="auth-signin.html")
              i.bx.bx-log-out.fs-18.align-middle.me-1
              span.align-middle Logout
        // App Search
        form.app-search.d-none.d-md-block.ms-2
          .position-relative
            input.form-control(
              value="" 
              autocomplete="off" 
              placeholder="Search..." 
              type="search"
              )
            iconify-icon.search-widget-icon(icon="solar:magnifer-linear")
